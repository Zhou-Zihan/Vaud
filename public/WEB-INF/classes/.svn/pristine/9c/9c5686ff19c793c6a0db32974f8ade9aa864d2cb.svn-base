package vaud.conf;

import vaud.data.CarDataPlugin;
import vaud.data.CellTowerDataPlugin;
import vaud.data.OtherDataPlugin;
import vaud.controller.*;
import vaud.test.*;

import com.jfinal.config.*;
import com.jfinal.core.JFinal;

public class Configration extends JFinalConfig {
	
	public void configConstant(Constants me) {
		me.setDevMode(true);
	}

	public void configRoute(Routes me) {
		
		me.add("/", IndexController.class, "/");
		me.add("/getWhich", GetWhich.class, "/");
		me.add("/getCar",GetCar.class,"/");
		me.add("/undoRedo",Undoredo.class,"/");
		//for test
		me.add("/test", AjaxTestController.class, "/");
	}

	public void configPlugin(Plugins me) {
		
		CellTowerDataPlugin celltower = new CellTowerDataPlugin();
		CarDataPlugin car = new CarDataPlugin();
		OtherDataPlugin other = new OtherDataPlugin();
		me.add(celltower);
		me.add(car);
		me.add(other);
		
	}

	public void configInterceptor(Interceptors me) {
	}

	public void configHandler(Handlers me) {
	}
	
	public static void main(String[] args) {
		JFinal.start("WebRoot",8000, "/", 5);
	}
}